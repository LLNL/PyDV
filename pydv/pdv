#!/usr/bin/env bash
pth=$(realpath $0)

if [[ $pth == *"pdv-sa"* ]]; then

    /usr/tce/bin/python3 pdv_launcher.py

else

    FILE="/usr/apps/weave/weave-prod-cpu/bin/activate"

    if [ -e "$FILE" ]; then

        source $FILE

    fi

    pth=$(dirname $pth)
    pth=$pth"/pdv_launcher.py"
    python3 $pth

fi
